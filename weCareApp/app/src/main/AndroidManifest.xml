<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt362.projects.weCareApp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeCare">

        <activity android:name=".MeditationLandActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>
        <activity
            android:name="ca.cmpt362.projects.WeCareApp.diary.ShowEntryActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>
        <activity
            android:name="ca.cmpt362.projects.WeCareApp.diary.AddEntryActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name="ca.cmpt362.projects.WeCareApp.diary.DiaryActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name="ca.cmpt362.projects.WeCareApp.diary.DiaryIntroActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".FindClinicActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".SurveyActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".MainMenuActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".ForgotPasswordActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".SignupActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"
            android:exported="true" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>