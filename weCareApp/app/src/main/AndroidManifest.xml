<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt362.projects.weCareApp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeCare">

        <activity android:name=".SurveyActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".InGoodHealth"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".MeditationLandActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>


        <activity android:name=".DiaryActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".FindClinicActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".MainMenuActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".ForgotPasswordActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity android:name=".SignupActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"/>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.WeCare.NoActionBar"
            android:exported="true" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <meta-data android:name="com.facebook.sdk.ClientToken" android:value="@string/facebook_client_token"/>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1093692514664072" />
    </application>

</manifest>